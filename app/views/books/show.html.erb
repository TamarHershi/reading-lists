<nav>
  <h1 class="nav_h1">
    <%= @book.title.upcase %>
  </h1>
  <ul>
    <li>
      <a href="/books/<%= @book.id %>/edit" class="header">EDIT BOOK</a>
    </li>
    <li>
      <a href="/reading_lists/" class="header">VIEW READING LISTS</a>
    </li>
  </ul>
</nav>
<div class="container">
  <h1><%= @book.title %></h1>
  <h2><%= @book.author %></h2>
  <p>
    Genre: <%= @book.genre %>
  </p>
  <% if @book.read_status == true %>
    <p class="read_status">
      read
    </p>
  <% else %>
    <p class="read_status">
      unread
    </p>
  <% end %>
  <div class="container">
    <% @book.reviews.each do |review| %>
      <p><%= review.body %></p>
      <p> by <%= review.reviewer %> </p>
      <p><%= localize(review.created_at, :format => :standard) %></p>
    <% end %>

  </div>
</div>
