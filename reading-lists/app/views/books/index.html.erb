<nav>
  <h1 class="nav_h1">
    BOOKS
  </h1>
  <ul>
    <li>
      <a href="/books/new" class="header">NEW BOOK</a>
    </li>
    <li>
      <a href="/reading_lists/" class="header">VIEW READING LISTS</a>
    </li>
  </ul>
</nav>

<div class="container">
  <% @books.each do |b| %>
  <h1>
    <a href="/books/<%= b.id %>"><%= b.title %></a> -
  </h1>
  <h2 class="books_h2">
    <%= b.author %>
  </h2>
  <span class="delete"
    <%= button_to "Delete", "/books/#{b.id}",  method: :delete, data: { confirm: "Are you sure you want to delete this book?" } , class: 'x-button' %>
  </span>
  <br />
  <hr>
  <br />
  <% end %>
</div>
