<nav>
  <h1>
    <%= @book.title %>
  </h1>
  <a href="/books/<%= @book.id %>/edit">EDIT BOOK</a>
  <a href="/reading_lists/">VIEW READING LISTS</a>
</nav>
<div class="container">
  <h1><%= @book.title %></h1>
  <h2><%= @book.author %></h2>
  <p>
    Genre: <%= @book.genre %>
  </p>
  <% if @book.read_status == true %>
    <p class="read_status">
      read
    </p>
  <% else %>
    <p class="read_status">
      unread
    </p>
  <% end %>
</div>
