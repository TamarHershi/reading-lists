<%= form_for @book, :html => {:class => "form-inline"} do |f| %>
  <fieldset>
    <legend><%= legend_text %></legend>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= radio_button_tag(:read_status, true) %>
    <%= label_tag(:read_status, "read") %>
    <%= radio_button_tag(:read_status, false) %>
    <%= label_tag(:read_status, "unread") %>
    <%= f.label :genre %>
    <%= f.text_field :genre %>
    <%= f.submit value: "#{button_text}", class: "new_button"%>
  </fieldset>
<% end %>
